	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
<!--===============================================================================================-->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-t-85 p-b-20">
        <form class="login100-form validate-form" method="POST" action="<%= id %>">
					<span class="login100-form-title p-b-70">
						Add Deadline task
					</span>
					<span class="login100-form-avatar">
						<img src="/images/logo.png" alt="AVATAR">
					</span>


					<div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate="Enter Event name">
            <input class="input100" type="text" name="name">
						<span class="focus-input100" data-placeholder="Event name"></span>
					</div>

          <div class="wrap-input100 validate-input  m-b-50" data-validate="Enter Deadline">
            <!-- <input class="input100" type="text" name="user"> -->
            <input type="datetime-local" class="input100" value='<%= start %>' placeholder="" name="deadline">
						<span class="focus-input100" data-placeholder="Deadline"></span>
					</div>
          
          <div class="wrap-input100 validate-input  m-b-50" data-validate = "Enter Hours required">
            <input class="input100" type="number"  name="hours">
            <span class="focus-input100" data-placeholder="Hours"></span>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Add task
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="round-button"><div class="round-button-circle"><a href="/users" class="round-button"><img src="/images/icons/favicon.ico" width="35" height="35"></a></div></div>

    <style>
      .round-button {
        right: 0;
        bottom: 0;
        position: fixed;
        width:15vh;
        height: 15vh;;
    }
    .round-button-circle {
      position: relative;
      width: 50%;
      height:50%;
      padding-bottom:50%;
      border-radius: 50%;
            
      background: rgb(218, 1, 1); 
    }
    .round-button-circle:hover {
      background:#30588e;
    }
    .round-button a {
      position: relative;
      display:block;
      float:left;
      width:100%;
      padding-top:47%;
      padding-bottom:30%;
      line-height:1em;
      margin-top:-0.5em;
            
      opacity: 1;
      text-align:center;
      color:#e6d4d4;
      font-family:Verdana;
      font-size:2.5em;
      font-weight:bold;
      text-decoration:none;
    }
    
      </style>


	<div id="dropDownSelect1"></div>
	
<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/daterangepicker/moment.min.js"></script>
	<script src="/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="/js/main.js"></script>

</body>
</html>