        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Kronos</span>
            <span class="d-none d-lg-block">
                <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="/images/logo.png" alt="">
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/users">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/users/settings">Settings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/users/contribute">Contribute</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/combo">Add Task</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/logout">Logout</a>
                </li>

            </ul>
        </div>
    </nav>

    <div class="container-fluid p-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="interests">
            <div class="my-auto">
                <h2 class="mb-5">Settings</h2>
                <h3 class="mb-0">Personal Info and Privacy</h3><br>
                <form class="change-details-form" method="POST" action="/users/change">

                    Registered Email id:<br>
                    <input type="email" name="email" id="text_email" disabled value="<%= email%>" size="35">
                    <input type="button" id="button_email" class="btn btn-info" value="Edit" onclick="enableButtonEmail()" /><br>
                    <br>

                    New Password:<br>
                    <input type="password" name="password" id="text_password" disabled value="" size="35">
                    <input type="button" id="button_pass" class="btn btn-info" value="Edit" onclick="enableButtonPassword()" /><br>
                    <input type="checkbox" id="showPass" onclick="ShowPassword()" disabled> Show Password<br>
                    <br>
                    <input type="submit" value="Save" id="Save_changes" disabled>
                </form>

                <script>
                    function enableButtonEmail() {
                        document.getElementById("text_email").disabled = false;
                        document.getElementById("Save_changes").disabled = false;
                    }

                    function enableButtonPassword() {
                        document.getElementById("text_password").disabled = false;
                        document.getElementById("Save_changes").disabled = false;
                        document.getElementById("showPass").disabled = false;
                    }

                    function ShowPassword() {
                        var x = document.getElementById("text_password");
                        if (x.type === "password") {
                            x.type = "text";
                        } else {
                            x.type = "password";
                        }
                    }
                </script>
            </div>
            <div class="my-auto">
                <h3 class="mb-0">Notifications</h3><br>
                <form method="POST" action="/users/email">
                    Email Notifications
                    <label class="switch">
                        <input type="checkbox" name="email_check" onclick="email_notif()" id="email_notify" value="<%= emailNotification%>"
                            <% if(emailNotification==1){%>checked
                        <%}%> >
                        <span class="slider round"></span>
                    </label>
                    <br>
                    <input type="submit" class="btn btn-info" value="Save Changes">
                    <script>
                        function email_notif(){
                            var checkbox = document.getElementById('email_notify');
                            if (checkbox.checked == true){
                                //Enable email notificaitons
                                checkbox.value = 1;
                            }
                            else{
                                //Disable email notifications
                                checkbox.value = 0;
                            }
                        }
                    </script>
                </form>
            </div>
            <div class="my-auto">
                <h3 class="mb-0">Contributor
                </h3>
                <br>
                List of Users added as contributor
                <ul>
                    <% for(var i=0; i<contributer.length; i++) {%>
                    <li>
                        <form action="/users/removecontributer" method="POST">
                            <button name="user" type="submit" value="<%= contributer[i] %>" class="btn btn-danger">Delete</button>
                            <%= contributer[i] %>
                        </form>
                    </li>
                    <% } %>
                </ul>
                <a href="/addcontributer"><button type="button" class="btn btn-info">Add Contributer</button></a>
            </div>
        </section>

        <hr class="m-0">
        <!-- Bootstrap core JavaScript -->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Plugin JavaScript -->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for this template -->
        <script src="/js/resume.min.js"></script>

</body>

